    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="header">
			<div class="container">
				<ul class="auth-menu">
          <li class="text-center hidden-xs">
            <a href="/dashboard" class="btn-left"><i class="fas fa-home"></i>マイページ</a>
          </li>
          <li class="text-center hidden-xs">
            <a href="/signout" class="btn-right"><i class="fas fa-sign-out-alt"></i>ログアウト</a>
          </li>
				</ul>
			</div>
      <div class="container">
        <div id="site-logo">
          <a href="/"><%= image_tag('logo_nasu.png', :class => "img-responsive" ,:alt => "Logo") %></a>
        </div>
      </div>
	  </div>
    <div class="container">
      <nav>
        <a href="index.html">NEWS</a>
        <a href="index.html">WHAT'S NEW</a>
        <a href="index.html">PROFILE</a>
        <a href="index.html">DISCOGRATPY</a>
        <a href="index.html">GOODS</a>
      </nav>
    </div>
    <div id="content" class="container">
      <%= yield %>
    </div>

    <div class="container">
      <footer>
        <nav>
        </nav>
        <p>© 2019 WARISHITA Powered by hogesako</p>
      </footer>
    </div>
  </body>
</html>
