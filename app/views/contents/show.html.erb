<div id="content" class="row">
    <div id="main-content" class="col-md-8 col-lg-9">
        <div class="corner-title">
            <h2><%= @content.category.name %></h2>   
        </div>
        <div class="details">
            <div class="title"><h3><%= @content.title %></h3></div>
            <div class="meta"><span>UPDATE: <%= @content.updated_at.strftime('%Y.%m.%d') %></span></div>
            <div class="body">
                <%= @content.body %>
            </div>
        </div>
    </div>
    <%= render partial: "shared/sidemenu" %>
</div>